class_name SwingingAxe extends Sprite2D

var is_swinging = false

func SwingAxeClockwise(_body: Node2D):
	if is_swinging:
		return
	
	is_swinging = true
	var tween = get_tree().create_tween()
	tween.tween_property(self, "rotation", deg_to_rad(360), 2).set_trans(Tween.TRANS_SPRING)
	await tween.finished
	rotation = 0.0
	is_swinging = false
	
func SwingAxeCounterClockwise(_body: Node2D):
	if is_swinging:
		return
	
	is_swinging = true
	var tween = get_tree().create_tween()
	tween.tween_property(self, "rotation", deg_to_rad(-360), 2).set_trans(Tween.TRANS_SPRING)
	await tween.finished
	rotation = 0.0
	is_swinging = false

